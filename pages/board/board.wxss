/* 这里写样式 */
.slide swiper {
	height: 400rpx;
}
.slide-image{
	width:100%;
	height: 100%;
}

.board{
	display: flex;
	flex-direction: column;
	padding:30rpx;
}
.board-item{
	display: flex;
	flex: 1;
	cursor: pointer; /*如果需要点击时高亮，可以给元素加这个*/
	border:1px solid #eee;
	margin-top: 30rpx;
	padding: 20rpx;
}

.board-item image{
	width:40rpx;
	height:40rpx;
}
.board-item text{
	flex: 1;
	width:40rpx;
	height:40rpx;
}
